<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.gaji.reply.mapper.ReplyMapper">
	
	<!-- 댓글 등록 -->
	<insert id="registerReply" parameterType="ReplyVO">
		insert into tbl_reply (replynum, reply, boardnum, membernum)
		values (reply_seq.nextval, #{reply}, #{boardnum},#{membernum})
	</insert>

	<!-- 댓글 조회 -->
	<select id="getReply" parameterType="int" resultType="ReplyVO">
		select a.replynum, a.reply, a.regdate, c.nickname
		from tbl_reply a
		join tbl_board b on a.boardnum = b.boardnum
		join tbl_member c on a.membernum = c.membernum
		where b.boardnum = #{boardnum}
	</select>


</mapper>