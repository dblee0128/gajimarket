console.log("Reply Module");

var replyService = (function(){
	function add(reply, callback, error) { // callback과 error를 파라미터로 받음
		colsole.log("add reply");
		
		$.ajax({
			type : 'post',
			url : '/reply/new',
			data : JSON.stringify(reply),
			contentType : "application/json; charset=utf-8", // 데이터 전송 타입
			success : function(result, status, xhr) {
				if(callback) {
					callback(result);
				}
			},
			error : function(xhr, status, er) {
				if(error) {
					error(er);
				}
			}
			
		})
	}
	
	function getList(param, callback, error) {
		var boardnum = param.boardnum;
		
		$.getJSON("/reply/pages/" + bno + "/" + ".json",
			function(data) {
				if(callback) {
					callback(data);
				}
			}).fail(function(xhr, status, err) {
				if(error) {
					errors();
				}
			});
	}
	
	
	
	
	return {
		add : add,
		getList : getList
	};
})();

